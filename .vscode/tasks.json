{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run TSE Tests",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/tse_data/",
        "-v",
        "--tb=short"
      ],
      "problemMatcher": [
        "$python"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Run All Tests with Coverage (70% gate)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "-v",
        "--ignore=tests/archived",
        "--cov=src",
        "--cov-report=term-missing",
        "--cov-report=html",
        "--cov-fail-under=70"
      ],
      "problemMatcher": [
        "$python"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
